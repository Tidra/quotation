/**app.wxss**/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

.col-red {
  color: red;
}

.col-green {
  color: green;
}

.col-blue {
  color: #04f;
}

.col-white {
  color: white;
}

.width-40 {
  text-align: left;
  width: 31%;
}

.width-20 {
  width: 23%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 加载动画 */

.loading {
  width: 100%;
  padding: 10rpx 0;
  text-align: center;
}

.loading:hover {
  opacity: 0.4;
  transition: opacity 0.3s;
}

.loading .ui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.loading .Data {
  display: inline-block;
  vertical-align: middle;
  color: #999;
  font-size: 13px;
}

page {
  background: #000;
  color: #808080;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* 板块信息 */

.inf {
  width: 100%;
}

.inf-opt {
  width: 95%;
  display: flex;
  padding: 10rpx 2.5%;
  background: #0e0e0e;
}

.opt-icon {
  width: 15px;
  height: 15px;
}

.inf-item {
  display: flex;
  align-items: center;
  font-size: 18px;
  width: 95%;
  margin: auto;
  padding: 10rpx 0;
  border-bottom: 1px solid rgba(128, 128, 128, 0.212);
  transition: opacity 0.3s;
}

.inf-item:hover {
  animation: anim 1s;
}

@keyframes anim {
    0% {
        opacity: 1;
    }
    60% {
        opacity: 0.3;
    }
    100% {
        opacity: 1;
    }
}

.inf-item .item {
  display: flex;
  flex-direction: column;
}

.inf-item .name {
  font-size: 18px;
  color: white;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.inf-item .code {
  font-size: 12px;
  color: gray;
}

/* 遮罩 */

.shade {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 100;
  background: rgba(19, 19, 19, 0.85);
}

.in-seach {
  display: flex;
  align-items: center;
  background: rgb(182, 181, 181);
  position: absolute;
  top: 30%;
  height: 40px;
  width: 90%;
  z-index: 300;
  border: 1px solid white;
  border-radius: 10px;
}

.in-seach .seach {
  width: 30px;
  height: 100%;
  padding: 0 5px;
}

.in-seach input {
  width: calc(100% - 100px);
  height: 80%;
  font-size: 20px;
  padding-left: 5px;
  border-left: 2px solid gray;
}

.in-seach button {
  width: 65px;
  height: 100%;
  line-height: 1.7;
  font-weight: 700;
  padding: 5px;
  margin: 0;
  color: white;
  background: rgb(46, 46, 46);
  border-radius: 0 10px 10px 0;
}
