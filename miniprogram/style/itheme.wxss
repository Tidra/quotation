/* 选项 */
.pic-opt {
  width: 90%;
  display: flex;
  margin: 8px auto;
  border: 1px solid #4c4c4c;
  border-radius: 5px;
}

.pic-opt text:not(:first-child) {
  border-left: 1px solid #4c4c4c;
}

.pic-opt .pic-sel {
  width: 20%;
  text-align: center;
  color: #fff;
  background: #4c4c4cd2;
}

.pic-opt .pic-nosel {
  width: 20%;
  text-align: center;
}


/* 加载动画 */

.loading {
  width: 100%;
  padding: 10px 0 50px;
  text-align: center;
}

.loading:hover {
  opacity: 0.4;
  transition: opacity 0.3s;
}

.loading .ui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.loading .Data {
  display: inline-block;
  vertical-align: middle;
  color: #999;
  font-size: 13px;
}

/* 板块信息 */

.inf {
  width: 100%;
}

.inf-opt {
  width: 95%;
  display: flex;
  padding: 10rpx 2.5%;
  background-color: #fff;
  border-top: 1px solid #f4f4f4;
}

.dark .inf-opt {
  background-color: #121212;
  border-color: #1e1e1e;
}

.opt-icon {
  width: 15px;
  height: 15px;
}

.inf-item {
  display: flex;
  align-items: center;
  font-size: 18px;
  width: 95%;
  margin: auto;
  padding: 10rpx 0;
  border-bottom: 1px solid #99999913;
  transition: opacity 0.3s;
}

.inf-item:hover {
  animation: anim 1s;
}

@keyframes anim {
  0% {
    opacity: 1;
  }

  60% {
    opacity: 0.3;
  }

  100% {
    opacity: 1;
  }
}

.inf-item .item {
  display: flex;
  flex-direction: column;
}

.inf-item .name {
  font-size: 18px;
  color: #363636;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.dark .inf-item .name {
  color: #f0f0f0;
}

.inf-item .code {
  font-size: 12px;
  color: #999;
}
