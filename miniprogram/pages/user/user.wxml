<!--miniprogram/pages/user/user.wxml-->
<view class="container">

  <!--头部-->
  <view class="head">
    <image class="more" src='/icon/more.png' mode="aspectFit"></image>
    <label class="title">自选</label>
    <image class="seach" src='/icon/seach.png' mode="aspectFit" bindtap="seachIs"></image>
  </view>

  <view class="pic-opt">
    <text id="gupiao" class="{{select_id=='gupiao'?'pic-sel':'pic-nosel'}}" bindtap="select">股票</text>
    <text id="jijin" class="{{select_id=='jijin'?'pic-sel':'pic-nosel'}}" bindtap="select">基金</text>
  </view>

  <!--板块信息-->
  <view class="inf">
    <view class="inf-opt">
      <view id="sort1" class="width-40 {{sort_by=='comprehensive'? 'col-blue':''}}" bindtap="sort">股票名称</view>
      <view id="sort2" class="width-20 {{sort_icon[0]!='up-down'? 'col-blue':''}}" bindtap="sort">最新
        <image class="opt-icon" src="../../icon/{{sort_icon[0]}}.png"></image>
      </view>
      <view id="sort3" class="width-20 {{sort_icon[1]!='up-down'? 'col-blue':''}}" bindtap="sort">涨幅
        <image class="opt-icon" src="../../icon/{{sort_icon[1]}}.png"></image>
      </view>
      <view id="sort4" class="width-20 {{sort_icon[2]!='up-down'? 'col-blue':''}}" bindtap="sort">涨跌
        <image class="opt-icon" src="../../icon/{{sort_icon[2]}}.png"></image>
      </view>
    </view>
    <scroll-view scroll-y="true" style="height: {{winHeight}}px;" enable-back-to-top="true" bindscrolltolower="bottomReLoad">
      <navigator url="/pages/details/details?code={{item.code}}" wx:for="{{value[select_id]}}" data-item="item">
        <view class="inf-item {{item.change>0?'col-red':'col-green'}}">
          <view class="item width-40">
            <text class="name">{{item.name}}</text>
            <text class="code">{{item.code}}</text>
          </view>
          <text class="width-20">{{item.current}}</text>
          <text class="width-20">{{item.quoteChange}}%</text>
          <text class="width-20">{{item.change}}</text>
        </view>
      </navigator>
    </scroll-view>
  </view>

  <!-- 搜索遮罩 -->
  <view class="shade" style="display:{{is_hide}};" bindtap="seachIs"></view>
  <form bindsubmit="seach" style="display:{{is_hide}}; width:90%;">
    <view class="in-seach">
      <image class="seach" src='/icon/seach.png' mode="aspectFit"></image>
      <input name="seach_value" focus="true" confirm-type="search" placeholder="股票名称/代码" bindconfirm="seach"></input>
      <button form-type="submit">搜索</button>
    </view>
  </form>

</view>