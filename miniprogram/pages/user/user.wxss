/* miniprogram/pages/user/user.wxss */

/* 标题栏 */

.head {
  background-color: #0e0e0e;
  width: 100%;
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.head .more {
  width: 20px;
  height: 20px;
  margin-left: 5%;
}

.head .title {
  font-size: 22px;
  font-weight: bold;
}

.head .seach {
  width: 20px;
  height: 20px;
  margin-right: 5%;
}

/* 类型 */

.pic-opt {
  width: 90%;
  display: flex;
  margin: 8px auto;
  border: 1px solid grey;
  border-radius: 5px;
}

.pic-opt text:not(:first-child) {
  border-left: 1px solid grey;
}

.pic-opt .pic-sel {
  width: 25%;
  text-align: center;
  color: #fff;
  background: rgba(165, 165, 165, 0.863);
}

.pic-opt .pic-nosel {
  width: 25%;
  text-align: center;
}

/* 板块信息 */

.col-red {
  color: red;
}

.col-green {
  color: green;
}

.col-blue {
  color: #04f;
}

.inf {
  width: 100%;
}

.inf-opt {
  width: 95%;
  display: flex;
  padding: 10rpx 2.5%;
  background: #0e0e0e;
}

.opt-icon {
  width: 15px;
  height: 15px;
}

.width-40 {
  text-align: left;
  width: 31%;
}

.width-20 {
  width: 23%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.inf-item {
  display: flex;
  align-items: center;
  font-size: 18px;
  width: 95%;
  margin: auto;
  padding: 10rpx 0;
  border-bottom: 1px solid rgba(128, 128, 128, 0.212);
}

.inf-item .item {
  display: flex;
  flex-direction: column;
}

.inf-item .name {
  font-size: 18px;
  color: white;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.inf-item .code {
  font-size: 12px;
  color: gray;
}

/* 遮罩 */

.shade {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 100;
  background: rgba(19, 19, 19, 0.85);
}

.in-seach {
  display: flex;
  align-items: center;
  background: rgb(182, 181, 181);
  position: absolute;
  top: 30%;
  height: 40px;
  width: 90%;
  z-index: 300;
  border: 1px solid white;
  border-radius: 10px;
}

.in-seach .seach {
  width: 30px;
  height: 100%;
  padding: 0 5px;
}

.in-seach input {
  width: calc(100% - 100px);
  height: 80%;
  font-size: 20px;
  padding-left: 5px;
  border-left: 2px solid gray;
}

.in-seach button {
  width: 65px;
  height: 100%;
  line-height: 1.7;
  font-weight: 700;
  padding: 5px;
  margin: 0;
  color: white;
  background: rgb(46, 46, 46);
  border-radius: 0 10px 10px 0;
}
