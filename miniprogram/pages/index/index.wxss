/* 遮罩 */

.shade {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 100;
  background: rgba(19, 19, 19, 0.85);
}

.in-seach {
  display: flex;
  align-items: center;
  background: rgb(182, 181, 181);
  position: absolute;
  top: 30%;
  height: 40px;
  width: 90%;
  z-index: 300;
  border: 1px solid white;
  border-radius: 10px;
}

.in-seach .seach {
  width: 30px;
  height: 100%;
  padding: 0 5px;
}

.in-seach input {
  width: calc(100% - 100px);
  height: 80%;
  font-size: 20px;
  padding-left: 5px;
  border-left: 2px solid gray;
}

.in-seach button {
  width: 65px;
  height: 100%;
  line-height: 1.7;
  font-weight: 700;
  padding: 5px;
  margin: 0;
  color: white;
  background: rgb(46, 46, 46);
  border-radius: 0 10px 10px 0;
}


/* 侧边框 */

.sidebar {
  position: absolute;
  height: 100%;
  width: 200px;
  top: 0;
  left: 0;
  background: #0e0e0e;
  /* border-right: 1px solid #3a3a3a; */
  z-index: 300;
  white-space: normal;
  color: #fff;
  font-size: 18px;
  transition: all 320ms ease;
}

.user {
  margin: 30px;
  padding: 0;
  text-align: center;
  line-height: 1;
  color: #fff;
}

.user-img {
  height: 80px;
  width: 80px;
  border-radius: 100%;
}

.user-inf {
  font-size: 18px;
  font-weight: 700;
}

.sidebar .item {
  padding: 15px 0;
  padding-left: 24px;
  margin-left: 10px;
  border-bottom: 1px solid #1b1b1b;
}

.sidebar .item-is {
  background: #1b1b1b;
  color: #04f;
  padding: 15px 0;
  padding-left: 20px;
  margin-left: 10px;
  border-bottom: 1px solid #1b1b1b;
  border-left: 4px solid #04f;
}

.sidebar .about {
  position: absolute;
  bottom: 0;
  padding: 30px 15px;
  font-size: 12px;
  color: #aaa;
}

.sidebar .about view{
  padding-bottom: 5px;
}