/* miniprogram/pages/index/index.wxss */

/* 标题栏 */

.head {
  background-color: #0c090a;
  width: 100%;
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.head .more {
  width: 20px;
  height: 20px;
  margin-left: 5%;
}

.head .title {
  font-size: 22px;
  font-weight: bold;
  margin-left: 10px;
}

.head .seach {
  width: 25px;
  height: 25px;
  margin-right: 5%;
}

/* 总览栏 */

.preview {
  width: 100%;
}

.pre-opt {
  background: #0c090a;
  padding: 7px 0;
  /*border: 1px solid grey;*/
}

.pre-items {
  margin: 8px 0;
}

.pre-opt, .pre-items {
  width: 100%;
  display: flex;
  justify-content: space-between;
  white-space: nowrap;
}

.pre-opt .opt-no {
  width: 20%;
  text-align: center;
}

.pre-opt .opt-yes {
  width: 20%;
  color: #04f;
  text-align: center;
  position: relative;
}

.pre-opt .opt-yes::before {
  content: "";
  position: absolute;
  display: block;
  bottom: -6px;
  height: 4.5px;
  background: #04f;
  right: 35%;
  left: 35%;
  border-radius: 10px;
}

.pre-item {
  text-align: center;
  width: 119px;
  display: inline-block;
}

.pre-item:hover {
  animation: anim 1s;
}

.pre-item .pre-name {
  font-size: 14px;
  color: white;
}

.pre-item .pre-sum {
  font-size: 20px;
}

.pre-item .pre-num {
  font-size: 12px;
  display: flex;
  width: 80%;
  margin: auto;
  justify-content: space-between;
}

/* 指数选项 */
.pic-opt {
  width: 40%;
  display: flex;
  margin: 8px auto;
  border: 1px solid grey;
  border-radius: 5px;
}

.pic-opt text:not(:first-child) {
  border-left: 1px solid grey;
}

.pic-opt .pic-sel {
  width: 50%;
  text-align: center;
  color: #fff;
  background: rgba(165, 165, 165, 0.863);
}

.pic-opt .pic-nosel {
  width: 50%;
  text-align: center;
}

