/* miniprogram/pages/details/details.wxss */
@import '../../style/itheme.wxss';

/* 名称 */

.head {
  width: 90%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5rpx 5%;
  background-color: #2990dc;
}

.dark .head {
  background-color: #1e1e1e;
}

.head .title {
  width: 75%;
  font-size: 75rpx;
  color: #f0f0f0;
}

.head .code {
  font-size: 14px;
  color: #4c4c4c;
}

.dark .head .code {
  color: #ababab;
}

.head .seach {
  width: 25px;
  height: 25px;
}

/* 数据内容 */

.data {
  width: 95%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 2.5%;
  font-size: 34rpx;
}

.font-18 {
  font-size: 40rpx;
}

.left-data {
  width: 45%;
  text-align: center;
  margin: auto 0;
}

.index-left-data {
  width: 55%;
  text-align: center;
  margin: auto 0;
}

.left-data .new-data, .index-left-data .new-data {
  font-size: 90rpx;
}

.left-data .up-data, .index-left-data .up-data {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.right-data {
  width: 50%;
  display: flex;
  flex-wrap: wrap;
}

.index-right-data {
  width: 40%;
  display: flex;
  flex-wrap: wrap;
}

.index-right-data .column {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.right-data .column {
  width: 50%;
  display: flex;
  flex-direction: column;
}

.down-data {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  font-size: 26rpx;
  margin: 6px 0;
}

.down-data .row {
  width: 32%;
  display: flex;
  justify-content: space-between;
  margin: 5rpx 0;
}

.row-button {
  width: 10%;
  display: flex;
  justify-content: center;
  margin-top: 2rpx;
  margin-left: 12%;
  padding: 3rpx 5% 5rpx 5%;
  background-color: #999;
  color: #f0f0f0;
}

.row-line {
  width: 100%;
  height: 3px;
  background-color: #999;
}

.dark .row-button, .dark .row-line {
  background-color: #242424;
}

.down-data .row-two {
  width: 40%;
  display: flex;
  justify-content: space-between;
  margin: 5rpx 0;
}

.down-data .row-oneline {
  width: 45%;
  display: flex;
  justify-content: space-between;
  margin: 5rpx 0;
  padding-right: 50%;
}

/* 图例 */

.pic {
  width: 100%;
}

/* 图 */

.chart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

ec-canvas {
  width: 100%;
  height: 410px;
}

/* 自选框 */

.picker {
  margin: 5px 0;
}

.notes {
  font-size: 10px;
  margin-bottom: 5px;
}

.dialog {
  color: #363636;
}