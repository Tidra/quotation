/* unit/sidebar/sidebar.wxss */

.shade {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 100;
  background: rgba(19, 19, 19, 0.85);
  transition: all 320ms ease;
}

.sidebar {
  position: absolute;
  height: 100%;
  width: 200px;
  top: 0;
  left: 0;
  background-color: #2990dc;
  z-index: 300;
  white-space: normal;
  color: #fff;
  font-size: 18px;
  transition: all 320ms ease;
}

.dark {
  background-color: #1e1e1e;
  color: #f0f0f0;
}

button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

.user {
  margin: 30px;
  padding: 0;
  text-align: center;
  line-height: 1;
  color: #fff;
}

.dark .user {
  color: #f0f0f0;
}

.user-img {
  height: 80px;
  width: 80px;
  border-radius: 100%;
}

.user-inf {
  height: 20px;
  font-weight: 700;
}

.sidebar .item {
  font-weight: 600;
  padding: 15px 0;
  padding-left: 24px;
  margin-left: 10px;
  border-bottom: 1px solid #f4f4f43d;
}

.sidebar .item-is {
  background-color: #f4f4f42d;
  /* color: #e2e2e2e1; */
  padding: 15px 0;
  padding-left: 20px;
  margin-left: 10px;
  border-bottom: 1px solid #f4f4f43d;
  border-left: 4px solid #f4f4f47d;
}

.sidebar .about {
  position: absolute;
  bottom: 0;
  padding: 30px 15px;
  font-size: 12px;
  color: #f4f4f4;
}

.dark .sidebar .about {
  color: #ababab;
}

.sidebar .about view {
  padding-bottom: 5px;
}
